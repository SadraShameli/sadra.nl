{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "checkJs": true,

        "types": ["node"],
        "lib": ["dom", "dom.iterable", "ESNext"],
        "noEmit": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "preserve",
        "plugins": [{ "name": "next" }],
        "incremental": true,

        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": [
        "eslint.config.js",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.cjs",
        "**/*.js",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
